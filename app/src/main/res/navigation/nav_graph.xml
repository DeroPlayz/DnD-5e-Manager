        android:id="@+id/DMPlayerManager"
        android:name="com.example.dnd5emanager.DMPlayerManager"
        android:label="Dungeon Master's Player Manager"
        tools:layout="@layout/dm_player_manager" >
    </fragment>
    <fragment
        android:id="@+id/DiceRoller"
        android:name="com.example.dnd5emanager.DiceRoller"
        android:label="Dice Roller"
        tools:layout="@layout/dice_roller" />
