<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CharacterCreatorPageOne">

    <EditText
        android:id="@+id/character_creator_page_one_edit_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/EditCharacterNameDefaultText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/character_creator_page_one_edit_level"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="number"
        android:text="@string/EditCharacterLevelDefaultText"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill" />

    <Spinner
        android:id="@+id/character_creator_page_one_edit_race"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:entries="@array/Races"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/character_creator_page_one_edit_subrace"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/character_creator_page_one_edit_class"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:entries="@array/Classes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/character_creator_page_one_view_character_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="436dp"
        android:layout_marginEnd="24dp"
        android:text="View Character!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/character_creator_page_one_strength_display_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STR"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@id/character_creator_page_one_spacer1"
        app:layout_constraintEnd_toEndOf="@+id/character_creator_page_one_edit_strength"
        app:layout_constraintStart_toStartOf="@+id/character_creator_page_one_edit_strength" />

    <TextView
        android:id="@+id/character_creator_page_one_intelligence_display_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INT"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/character_creator_page_one_edit_intelligence"
        app:layout_constraintStart_toStartOf="@+id/character_creator_page_one_edit_intelligence"
        app:layout_constraintTop_toBottomOf="@id/character_creator_page_one_spacer2" />

    <TextView
        android:id="@+id/character_creator_page_one_wisdom_display_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WIS"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/character_creator_page_one_edit_wisdom"
        app:layout_constraintStart_toStartOf="@+id/character_creator_page_one_edit_wisdom"
        app:layout_constraintTop_toBottomOf="@id/character_creator_page_one_spacer2" />

    <TextView
        android:id="@+id/character_creator_page_one_charisma_display_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHA"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/character_creator_page_one_edit_charisma"
        app:layout_constraintStart_toStartOf="@+id/character_creator_page_one_edit_charisma"
        app:layout_constraintTop_toBottomOf="@id/character_creator_page_one_spacer2" />

    <TextView
        android:id="@+id/character_creator_page_one_dexterity_display_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEX"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@id/character_creator_page_one_spacer1"
        app:layout_constraintEnd_toEndOf="@+id/character_creator_page_one_edit_dexterity"
        app:layout_constraintStart_toStartOf="@+id/character_creator_page_one_edit_dexterity" />

    <TextView
        android:id="@+id/character_creator_page_one_constitution_display_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CON"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@id/character_creator_page_one_spacer1"
        app:layout_constraintEnd_toEndOf="@+id/character_creator_page_one_edit_constitution"
        app:layout_constraintStart_toStartOf="@+id/character_creator_page_one_edit_constitution" />

    <EditText
        android:id="@+id/character_creator_page_one_edit_strength"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/character_creator_page_one_spacer1"
        app:layout_constraintTop_toTopOf="@id/character_creator_page_one_spacer1" />

    <EditText
        android:id="@+id/character_creator_page_one_edit_intelligence"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/character_creator_page_one_spacer1"
        app:layout_constraintTop_toBottomOf="@id/character_creator_page_one_intelligence_display_text" />

    <EditText
        android:id="@+id/character_creator_page_one_edit_wisdom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/character_creator_page_one_edit_intelligence"
        app:layout_constraintTop_toBottomOf="@id/character_creator_page_one_wisdom_display_text" />

    <EditText
        android:id="@+id/character_creator_page_one_edit_charisma"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/character_creator_page_one_edit_wisdom"
        app:layout_constraintTop_toBottomOf="@id/character_creator_page_one_charisma_display_text" />

    <EditText
        android:id="@+id/character_creator_page_one_edit_dexterity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/character_creator_page_one_edit_strength"
        app:layout_constraintTop_toTopOf="@id/character_creator_page_one_edit_strength" />

    <EditText
        android:id="@+id/character_creator_page_one_edit_constitution"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/character_creator_page_one_edit_dexterity"
        app:layout_constraintTop_toTopOf="@id/character_creator_page_one_edit_dexterity" />

    <EditText
        android:id="@+id/character_creator_page_one_edit_health"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="text"
        android:text="Health"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/character_creator_page_one_spacer1" />

    <Space
        android:id="@+id/character_creator_page_one_spacer1"
        android:layout_width="20dp"
        android:layout_height="160dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="240dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/character_creator_page_one_spacer2"
        android:layout_width="190dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toEndOf="@id/character_creator_page_one_spacer1"
        app:layout_constraintTop_toBottomOf="@id/character_creator_page_one_edit_strength" />

    <Button
        android:id="@+id/character_creator_page_one_minimum_health"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Minimum Health"
        android:textSize="11.5sp"
        app:layout_constraintStart_toStartOf="@id/character_creator_page_one_edit_health"
        app:layout_constraintTop_toBottomOf="@id/character_creator_page_one_edit_health" />

    <Button
        android:id="@+id/character_creator_page_one_maximum_health"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Maximum Health"
        android:textSize="11.5sp"
        app:layout_constraintStart_toStartOf="@id/character_creator_page_one_edit_health"
        app:layout_constraintTop_toBottomOf="@id/character_creator_page_one_minimum_health" />

    <Button
        android:id="@+id/character_creator_page_one_roll_health"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:padding="1dp"
        android:text="Roll Health"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/character_creator_page_one_minimum_health"
        app:layout_constraintTop_toTopOf="@id/character_creator_page_one_minimum_health" />

</androidx.constraintlayout.widget.ConstraintLayout>