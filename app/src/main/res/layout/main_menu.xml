<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="38dp">

        <Button
            android:id="@+id/main_menu_view_characters"
            android:layout_width="343dp"
            android:layout_height="173dp"
            android:layout_marginTop="96dp"
            android:backgroundTint="#FF0000"
            android:text="Character⚔️"
            android:textColor="#FFFFFF"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/main_menu_view_data"
            android:layout_width="341dp"
            android:layout_height="167dp"
            android:layout_marginTop="492dp"
            android:backgroundTint="#25681C"
            android:text="Information 📖"
            app:cornerRadius="0dp"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/main_menu_help_page"
            android:layout_width="85dp"
            android:layout_height="78dp"
            android:backgroundTint="#FFEB3B"
            android:text=" ? "
            android:textColor="#000000"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.548"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/main_menu_view_d_m_menu"
            android:layout_width="332dp"
            android:layout_height="183dp"
            android:backgroundTint="#1541AF"
            android:text="Dungeon Master Menu 🎲"
            android:textColor="#FFFFFF"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.68"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.61" />

        <Button
            android:id="@+id/main_menu_settings"
            android:layout_width="96dp"
            android:layout_height="78dp"
            android:backgroundTint="#4B4A4A"
            android:text="⚙️ "
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.97"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/Title"
            android:layout_width="123dp"
            android:layout_height="72dp"
            android:layout_marginTop="12dp"
            android:text="5e Manager"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>