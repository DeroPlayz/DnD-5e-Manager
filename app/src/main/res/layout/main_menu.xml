<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dragon_background"
    tools:context=".MainMenu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#000000"
        android:padding="38dp">

        <Button
            android:id="@+id/main_menu_view_characters"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="#D34141"
            android:contentDescription="view characters "
            app:cornerRadius="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Title" />

        <TextView
            android:id="@+id/character_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Characters"
            android:textColor="#FFFFFF"
            android:textSize="45sp"
            app:layout_constraintBottom_toBottomOf="@id/main_menu_view_characters"
            app:layout_constraintEnd_toStartOf="@id/character_icon"
            app:layout_constraintStart_toStartOf="@id/main_menu_view_characters"
            app:layout_constraintTop_toTopOf="@id/main_menu_view_characters" />

        <ImageView
            android:id="@+id/character_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleX=".7"
            android:src="@drawable/character"
            app:layout_constraintBottom_toBottomOf="@id/main_menu_view_characters"
            app:layout_constraintEnd_toEndOf="@id/main_menu_view_characters"
            app:layout_constraintTop_toTopOf="@id/main_menu_view_characters"
            tools:scaleY=".7" />

        <Button
            android:id="@+id/main_menu_view_data"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#3B812C"
            android:contentDescription="Information page  "
            app:cornerRadius="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_menu_view_characters" />

        <TextView
            android:id="@+id/info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Information"
            android:textColor="#FFFFFF"
            android:textSize="45sp"
            app:layout_constraintBottom_toBottomOf="@id/main_menu_view_data"
            app:layout_constraintEnd_toStartOf="@id/info_icon"
            app:layout_constraintStart_toStartOf="@id/main_menu_view_data"
            app:layout_constraintTop_toTopOf="@id/main_menu_view_data" />

        <ImageView
            android:id="@+id/info_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleX=".7"
            android:src="@drawable/book"
            app:layout_constraintBottom_toBottomOf="@id/main_menu_view_data"
            app:layout_constraintEnd_toEndOf="@id/main_menu_view_data"
            app:layout_constraintTop_toTopOf="@id/main_menu_view_data"
            tools:scaleY=".7" />

        <Button
            android:id="@+id/main_menu_dice_roller"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#DB8B2B"
            android:contentDescription="Dice Rollers "
            app:cornerRadius="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_menu_view_data" />

        <TextView
            android:id="@+id/dice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Dice Roller"
            android:textColor="#FFFFFF"
            android:textSize="45sp"
            app:layout_constraintBottom_toBottomOf="@id/main_menu_dice_roller"
            app:layout_constraintEnd_toStartOf="@id/dice_icon"
            app:layout_constraintStart_toStartOf="@id/main_menu_dice_roller"
            app:layout_constraintTop_toTopOf="@id/main_menu_dice_roller" />

        <ImageView
            android:id="@+id/dice_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleX=".7"
            android:src="@drawable/d20"

            app:layout_constraintBottom_toBottomOf="@id/main_menu_dice_roller"
            app:layout_constraintEnd_toEndOf="@id/main_menu_dice_roller"
            app:layout_constraintTop_toTopOf="@id/main_menu_dice_roller"
            tools:scaleY=".7" />

        <TextView
            android:id="@+id/Title"
            android:layout_width="148dp"
            android:layout_height="70dp"
            android:background="#CDCECE"
            android:text="5e Manager"
            android:textColor="#000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/main_menu_settings"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cog"
            android:contentDescription="setting page "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/main_menu_help_page"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/skillcheck"
            android:contentDescription="Help page "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/Title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>