<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dragon_background"
    tools:context=".MainMenu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#000000"
        android:padding="38dp">

        <Button
            android:id="@+id/main_menu_view_characters"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="@color/menu_red"
            android:contentDescription="view characters "
            app:cornerRadius="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Title" />

        <TextView
            android:id="@+id/character_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/word_characters"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@id/main_menu_view_characters"
            app:layout_constraintEnd_toStartOf="@id/character_icon"
            app:layout_constraintStart_toStartOf="@id/main_menu_view_characters"
            app:layout_constraintTop_toTopOf="@id/main_menu_view_characters" />

        <ImageView
            android:id="@+id/character_icon"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/character"
            android:backgroundTint="@color/black"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="@id/main_menu_view_characters"
            app:layout_constraintEnd_toEndOf="@id/main_menu_view_characters"
            app:layout_constraintTop_toTopOf="@id/main_menu_view_characters" />

        <Button
            android:id="@+id/main_menu_view_data"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/menu_green"
            android:contentDescription="Information page  "
            app:cornerRadius="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_menu_view_characters" />

        <TextView
            android:id="@+id/info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/word_information"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@id/main_menu_view_data"
            app:layout_constraintEnd_toStartOf="@id/info_icon"
            app:layout_constraintStart_toStartOf="@id/main_menu_view_data"
            app:layout_constraintTop_toTopOf="@id/main_menu_view_data" />

        <ImageView
            android:id="@+id/info_icon"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/book"
            android:backgroundTint="@color/black"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="@id/main_menu_view_data"
            app:layout_constraintEnd_toEndOf="@id/main_menu_view_data"
            app:layout_constraintTop_toTopOf="@id/main_menu_view_data" />

        <Button
            android:id="@+id/main_menu_dice_roller"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/menu_orange"
            android:contentDescription="Dice Rollers "
            app:cornerRadius="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_menu_view_data" />

        <TextView
            android:id="@+id/dice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/phrase_dice_roller"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@id/main_menu_dice_roller"
            app:layout_constraintEnd_toStartOf="@id/dice_icon"
            app:layout_constraintStart_toStartOf="@id/main_menu_dice_roller"
            app:layout_constraintTop_toTopOf="@id/main_menu_dice_roller" />

        <ImageView
            android:id="@+id/dice_icon"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/d20"
            android:backgroundTint="@color/black"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="@id/main_menu_dice_roller"
            app:layout_constraintEnd_toEndOf="@id/main_menu_dice_roller"
            app:layout_constraintTop_toTopOf="@id/main_menu_dice_roller" />

        <TextView
            android:id="@+id/Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@color/menu_grey"
            android:padding="5px"
            android:text="@string/phrase_main_menu"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:cornerRadius="100dp"
            app:layout_constraintBottom_toBottomOf="@id/main_menu_settings"
            app:layout_constraintEnd_toStartOf="@id/main_menu_settings"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/main_menu_help_page"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.714"
            tools:layout_constraintTop_toTopOf="@id/main_menu_settings" />

        <ImageButton
            android:id="@+id/main_menu_settings"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/menu_grey"
            android:contentDescription="setting page "
            android:scaleType="centerCrop"
            android:src="@drawable/cog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/main_menu_help_page"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/menu_grey"
            android:contentDescription="Help page "
            android:scaleType="centerCrop"
            android:src="@drawable/skillcheck"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>