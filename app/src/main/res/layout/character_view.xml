<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8193B4"
    tools:context=".CharacterView">

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="top" />

    <TextView
        android:id="@+id/characterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="80dp"
        android:text="Name"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/characterRace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Race"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@id/characterName"
        app:layout_constraintStart_toStartOf="@id/characterName"
        app:layout_constraintTop_toBottomOf="@id/characterName" />

    <TextView
        android:id="@+id/characterLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Level"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@id/characterName"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@id/characterName"
        app:layout_constraintTop_toBottomOf="@id/characterRace" />

    <Button
        android:id="@+id/character_view_back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="#00FFFFFF"
        android:padding="0dp"
        android:text="🔙"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/character_view_delete_character"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="#00FFFFFF"
        android:padding="0dp"
        android:text="🗑️"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/character_view_back_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/characterViewMoreInformation"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:backgroundTint="#6998FD"
        android:text="More Information"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/toDice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#6793F1"
        android:text="Dice"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.876"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/characterLevel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/important_stats_card"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/health_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/character_view_health_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Health:"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/character_view_current_health"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:text="/"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@id/character_view_health_text"
                        app:layout_constraintTop_toTopOf="@id/character_view_health_text" />

                    <TextView
                        android:id="@+id/character_view_health_divider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@id/character_view_current_health"
                        app:layout_constraintTop_toTopOf="@id/character_view_current_health" />

                    <TextView
                        android:id="@+id/character_view_max_health"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@id/character_view_health_divider"
                        app:layout_constraintTop_toTopOf="@id/character_view_health_divider" />

                    <ImageButton
                        android:id="@+id/character_view_subtract_health"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-30dp"
                        android:background="#00FFFFFF"
                        android:scaleX=".25"
                        android:scaleY=".25"
                        android:src="@drawable/disadvantage"
                        app:layout_constraintStart_toEndOf="@id/character_view_health_text"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/character_view_add_health"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="-30dp"
                        android:background="#00372C2C"
                        android:scaleX=".25"
                        android:scaleY=".25"
                        android:src="@drawable/advantage"
                        app:layout_constraintStart_toEndOf="@id/character_view_current_health"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/abilities_card"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="25dp"
                app:cardBackgroundColor="#6999FF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/abilities_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/strength_card"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="30dp"
                        app:cardBackgroundColor="#5E92FF"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/strength_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/character_view_strength_text"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:text="Strength"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                app:layout_constraintEnd_toEndOf="@+id/character_view_strength_value"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="@+id/character_view_strength_value"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/character_view_strength_value"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:text="✏️"
                                android:textAlignment="center"
                                android:textSize="22sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/character_view_strength_mod"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/character_view_strength_text" />

                            <TextView
                                android:id="@+id/character_view_strength_mod"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="✏️"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/character_view_strength_value"
                                app:layout_constraintTop_toBottomOf="@+id/character_view_strength_text" />

                            <TextView
                                android:id="@+id/character_view_strength_save"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:padding="0dp"
                                android:text="✏️"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/character_view_strength_value"
                                app:layout_constraintTop_toBottomOf="@+id/character_view_strength_mod" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/dexterity_card"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="170dp"
                        android:layout_marginTop="30dp"
                        app:cardBackgroundColor="#5E92FF"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/dexterity_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/character_view_dexterity_text"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:text="Dexterity"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                app:layout_constraintEnd_toEndOf="@+id/character_view_dexterity_value"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="@+id/character_view_dexterity_value"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/character_view_dexterity_value"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:text="✏️"
                                android:textAlignment="center"
                                android:textSize="22sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/character_view_dexterity_mod"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/character_view_dexterity_text" />

                            <TextView
                                android:id="@+id/character_view_dexterity_mod"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="✏️"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/character_view_dexterity_value"
                                app:layout_constraintTop_toBottomOf="@+id/character_view_dexterity_text" />

                            <TextView
                                android:id="@+id/character_view_dexterity_save"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="✏️"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/character_view_dexterity_value"
                                app:layout_constraintTop_toBottomOf="@+id/character_view_dexterity_mod" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/constitution_card"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="260dp"
                        android:layout_marginTop="30dp"
                        app:cardBackgroundColor="#5E92FF"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constitution_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/character_view_constitution_text"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:text="Constitution"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                app:layout_constraintEnd_toEndOf="@+id/character_view_constitution_value"
                                app:layout_constraintStart_toStartOf="@+id/character_view_constitution_value"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/character_view_constitution_value"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:text="✏️"
                                android:textAlignment="center"
                                android:textSize="22sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/character_view_constitution_mod"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/character_view_constitution_text" />

                            <TextView
                                android:id="@+id/character_view_constitution_mod"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="✏️"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/character_view_constitution_value"
                                app:layout_constraintTop_toBottomOf="@+id/character_view_constitution_text" />


                            <TextView
                                android:id="@+id/character_view_constitution_save"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="✏️"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/character_view_constitution_value"
                                app:layout_constraintTop_toBottomOf="@+id/character_view_constitution_mod" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/intelligence_card"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="110dp"
                        app:cardBackgroundColor="#5E92FF"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/intelligence_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/character_view_intelligence_text"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:text="Intelligence"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="13.5sp"
                                app:layout_constraintEnd_toEndOf="@+id/character_view_intelligence_value"
                                app:layout_constraintStart_toStartOf="@+id/character_view_intelligence_value"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/character_view_intelligence_value"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:text="✏️"
                                android:textAlignment="center"
                                android:textSize="22sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/character_view_intelligence_mod"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/character_view_intelligence_text" />

                            <TextView
                                android:id="@+id/character_view_intelligence_mod"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="✏️"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/character_view_intelligence_value"
                                app:layout_constraintTop_toBottomOf="@+id/character_view_intelligence_text" />


                            <TextView
                                android:id="@+id/character_view_intelligence_save"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="✏️"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/character_view_intelligence_value"
                                app:layout_constraintTop_toBottomOf="@+id/character_view_intelligence_mod" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/wisdom_card"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="170dp"
                        android:layout_marginTop="110dp"
                        app:cardBackgroundColor="#5E92FF"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/wisdom_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/character_view_wisdom_text"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:text="Wisdom"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                app:layout_constraintEnd_toEndOf="@+id/character_view_wisdom_value"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="@+id/character_view_wisdom_value"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/character_view_wisdom_value"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:text="✏️"
                                android:textAlignment="center"
                                android:textSize="22sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/character_view_wisdom_mod"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/character_view_wisdom_text" />

                            <TextView
                                android:id="@+id/character_view_wisdom_mod"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="✏️"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/character_view_wisdom_value"
                                app:layout_constraintTop_toBottomOf="@+id/character_view_wisdom_text" />


                            <TextView
                                android:id="@+id/character_view_wisdom_save"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="✏️"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/character_view_wisdom_value"
                                app:layout_constraintTop_toBottomOf="@+id/character_view_wisdom_mod" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/charisma_card"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="260dp"
                        android:layout_marginTop="110dp"
                        app:cardBackgroundColor="#5E92FF"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/charisma_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/character_view_charisma_text"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:text="Charisma"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                app:layout_constraintEnd_toEndOf="@+id/character_view_charisma_value"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="@+id/character_view_charisma_value"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/character_view_charisma_value"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:text="✏️"
                                android:textAlignment="center"
                                android:textSize="22sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/character_view_charisma_mod"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/character_view_charisma_text" />

                            <TextView
                                android:id="@+id/character_view_charisma_mod"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="✏️"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/character_view_charisma_value"
                                app:layout_constraintTop_toBottomOf="@+id/character_view_charisma_text" />


                            <TextView
                                android:id="@+id/character_view_charisma_save"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="✏️"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/character_view_charisma_value"
                                app:layout_constraintTop_toBottomOf="@id/character_view_charisma_mod" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <Space
                        android:id="@+id/character_view_spacer1"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Space
                        android:id="@+id/character_view_spacer2"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/skills_card"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="25dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/skills_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>